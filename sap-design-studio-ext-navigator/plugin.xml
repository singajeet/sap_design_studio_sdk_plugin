<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="com.armin.sap.ds.ext.navigator.category"
            class="org.eclipse.ui.navigator.CommonNavigator"
            icon="images/application-javascript.png"
            id="com.armin.sap.ds.ext.navigator.view"
            name="%view.name">
      </view>
      <category
            id="com.armin.sap.ds.ext.navigator.category"
            name="%category.name">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewerActionBinding
            viewerId="com.armin.sap.ds.ext.navigator.view">
         <includes>
            <actionExtension
                  pattern="org.eclipse.ui.navigator.resources.*">
            </actionExtension>
         </includes>
      </viewerActionBinding>
      <viewerContentBinding
            viewerId="com.armin.sap.ds.ext.navigator.view">
         <includes>
            <contentExtension
                  pattern="com.armin.sap.ds.ext.navigator.content">
            </contentExtension>
         </includes>
      </viewerContentBinding>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <navigatorContent
            contentProvider="com.armin.sap.ds.ext.navigator.provider.ContentProvider"
            icon="images/nav-square.png"
            id="com.armin.sap.ds.ext.navigator.content"
            labelProvider="com.armin.sap.ds.ext.navigator.provider.LabelProvider"
            name="%navigatorContent.name">
         <triggerPoints>
            <instanceof
                  value="org.eclipse.core.resources.IWorkspaceRoot">
            </instanceof>
         </triggerPoints>
         <commonSorter
               class="com.armin.sap.ds.ext.navigator.sorter.CategorySorter"
               id="com.armin.sap.ds.ext.navigator.sorter.categorysorter">
            <parentExpression>
               <or>
                  <instanceof
                        value="com.armin.sap.ds.ext.navigator.elements.DesignStudioProjectRes">
                  </instanceof>
               </or>
            </parentExpression>
         </commonSorter>
      </navigatorContent>
   </extension>

</plugin>
