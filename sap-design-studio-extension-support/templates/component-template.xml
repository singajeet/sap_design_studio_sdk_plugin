<component
			id="${id}"
			title="${title}"
			tooltip="${tooltip}"
			icon="${icon}"
			handlerType="${handlerType}"
			modes="${modes}"
			databound="${databound}"
			propertySheetPath="${propertySheetPath}"
			group="${group}">
			
	<!-- requireJs should go here -->
	${requireJs}
	<!-- css include should go here -->
	${cssInclude}
	<!-- all property definitions will go here -->
	${properties}
	
	<!-- default values section -->
	<initialization>
		${defaultValues}
	</initialization>
</component>